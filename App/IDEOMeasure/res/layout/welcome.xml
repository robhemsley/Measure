<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="2000px"
    android:minHeight="200px"
    android:background="#FFFFFF"
    android:padding="20px"
    android:id="@+id/welcome_holder"
    >
    
    <TextView
        android:id="@+id/welcome_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dimensions"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black" 
        android:layout_weight="0.88"
        android:textStyle="bold"/> 

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="550px">
        
        
       		<ImageView
	            android:id="@+id/welcome_img_layer1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/measure_1"/>
       		
       		<ImageView
	            android:id="@+id/welcome_img_layer2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
       		
       		<ImageView
	            android:id="@+id/welcome_img_layer3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
       		
       		<ImageView
	            android:id="@+id/welcome_img_layer4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
       		
       		
       		<ImageView
	            android:id="@+id/welcome_img_layer5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
       		
       		<ImageView
	            android:id="@+id/welcome_img_layer6"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
        
    </FrameLayout>
    
    <TextView
        android:id="@+id/welcome_des_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.88"
        android:text="Dimensions your objects"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black" />
            
	<Button
		 android:id="@+id/get_measuring"
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		 android:layout_gravity="center_horizontal"
		 android:layout_marginTop="20px"
		 android:layout_weight="1"
		 android:background="@drawable/red_btn"
		 android:text="Get Measuring"
		 android:textColor="@color/white" 
		 android:visibility="gone"/>
		
</LinearLayout>